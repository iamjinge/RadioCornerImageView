<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iamjinge.radiocornerimageview.MainActivity">


    <com.iamjinge.library.RadioCornerImageView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_480_480" />

    <com.iamjinge.library.RadioCornerImageView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/pic_480_480"
        app:rc_cornerRadio="1" />

    <com.iamjinge.library.RadioCornerImageView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/pic_480_480"
        app:rc_heightRadio="9"
        app:rc_widthRadio="16" />

    <com.iamjinge.library.RadioCornerImageView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/pic_480_480"
        app:rc_cornerRadio="0.2"
        app:rc_heightRadio="9"
        app:rc_widthRadio="16" />

</LinearLayout>
